public void createCourseAndClass(String name, String description) {
    // code here
    apxio__Course__c course = new apxio__Course__c ();
    course.Name = name;
    course.apxio__Course_Details__c = description;
    insert course;

    List<apxio__Course__c> courses = [select Id, Name from apxio__Course__c];
 
   List<apxio__Class__c> classes = new List<apxio__Class__c>();

    
   for(apxio__Course__c c : courses){
       apxio__Class__c class = new apxio__Class__c();
       class.apxio__Course__c = c.Id;
       class.Name = c.Name;
       String desc = c.description;
       if(desc.length()>255){
           desc = desc.substring(0,255);
          
       }
       class.apxio__Description__c = desc;
       classes.add(class);
   }
   insert classes;

   

}